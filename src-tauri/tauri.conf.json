{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Roam",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": {
          "allow": ["**"],
          "requireLiteralLeadingDot": false
        }
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "process": {
        "all": false,
        "exit": false,
        "relaunch": true,
        "relaunchDangerousAllowSymlinkMacos": false
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "Roam",
      "category": "Productivity",
      "copyright": "Copyright (c) 2023 Seakmeng",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": true,
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZERTQ3OTFEMzhDNTJEOUEKUldTYUxjVTRIWG5rYmFYak50OVBjTnBORHQ5TE5WeHJDMGNHbEJZdWxoa0RvbFEyUDVPSno1NTEK",
      "endpoints": ["https://github.com/Tsounguinzo/Roam/releases/latest/download/latest.json"],
      "windows": {
        "installMode": "passive"
      }
    },
    "security": {
      "csp": "asset: https://asset.localhost"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Roam",
        "width": 800,
        "height": 600,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": true
  }
}
